
<div class="main-container">
{% for collection in collections[section.settings.collection_to_display.handle].products %}
  
  <div id="PopupModal-{{ block.id }}" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>{{ collection.title }}</h2>
     
      <img src="{{ collection.image | img_url: 'small' }}" alt="Image">
    </div>
    <button class="popup-open" data-id ={{ collection.variants[0].id }} data-name={{ collection.title  }} data-price={{ collection.price }}>Popup</button>
     <button class="popup-close">Close</button>
  </div>

   <div class="popup-container">
    <h1> hiii from h tag {{ collection.title }}</h1>
    <p>hiii from p tag {{ collection.price }}</p>
  </div>
{% endfor %}

 

</div>

