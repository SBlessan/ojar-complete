{% schema %}
   {
  "name": "Collection Section",
  "settings": [
    {
      "type": "text",
      "label": "Section Title",
      "id": "title",
      "default": "Enter The Title"
    },
     {
      "type": "image_picker",
      "label": "Enter image",
      "id": "image"
      
    },
    {
      "type": "collection",
